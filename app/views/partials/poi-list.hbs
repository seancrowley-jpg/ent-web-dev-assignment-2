<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <table class="uk-table">
        <caption>
            Points of Interest
        </caption>
        <thead>
        <th>Name</th>
        <th>Description</th>
        <th>Added By</th>
        <th>View</th>
        </thead>
        <tbody class="uk-text-left">
        {{#each poi}}
            <tr>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>{{user.firstName}} {{user.lastName}}</td>
                <td><a href="poi/{{_id}}"><button class="uk-button uk-button-primary uk-button-small">View</button></a></td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>